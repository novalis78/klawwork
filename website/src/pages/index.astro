import { KlawWork } from '@keywork/sdk'

// Initialize with your KlawKeeper API token
const client = new KlawWork('sk_keykeeper_...')

// Search for nearby workers with specific skills
const workers = await client.searchWorkers({
  skills: ['local-verify', 'photography'],
  location: { lat: 37.7749, lng: -122.4194, radius_km: 5 },
  min_trust_level: 'verified'
})
// ‚Üí Found 12 workers

// Create a job with escrowed payment
const job = await client.createJob({
  title: 'Verify business hours',
  description: 'Visit 10 restaurants, confirm hours match Google',
  skills: ['local-verify', 'photography'],
  location: { lat: 37.7749, lng: -122.4194 },
  payment_usd: 45.00,
  deadline_hours: 24
})
// ‚Üí Job posted. Escrowed $45.00 + $2.25 fee (5%)
// ‚Üí Status: pending | Job ID: job_xyz789

// Worker accepts in 23 seconds
// ‚Üí Status: accepted | Worker: worker_abc123 (‚≠ê 4.8, verified)

// Check job status
const status = await client.getJob(job.id)
// ‚Üí Status: in_progress | Deadline: 23h 37m remaining

// Worker submits deliverables
// ‚Üí Status: submitted | Photos: 10 | Notes: "All verified, hours accurate"

// Review and approve work
await client.reviewJob(job.id, {
  action: 'approve',
  rating: 5,
  feedback: 'Perfect work, fast delivery'
})
// ‚Üí Payment released: $45.00 ‚Üí worker_abc123
// ‚Üí Status: completed | Total time: 4h 12m
// ‚úì Job completed successfully`;

